<nav>
    <p><img src="/images/simbolo1.webp">CENTRO MEDICO BACK</p>
    <h3><img src="/images/simbolomedico2.webp">LISTADO DE MEDICOS</h3>
</nav>


    <table border="1">
        <thead>
            <tr>
                <th>Cedula</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Especialidad</th>
                <th>Consultorio</th>
                <th>Correo</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each medicos}}
            <tr>
                <form action="/medicos/actualizar/{{cedula}}" method="post">
                    <td><input class="filatabla" type="text" value="{{cedula}}" disabled></td>
                    <td><input type="text" id="nombre" name="nombre" pattern="[A-Za-zñÑáéíóúÁÉÍÓÚ\s]+" value="{{nombre}}" {{#ifCond @key '!='
                            ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                    <td><input type="text" id="apellido" name="apellido" pattern="[A-Za-zñÑáéíóúÁÉÍÓÚ\s]+" value="{{apellido}}" {{#ifCond @key '!='
                            ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                    <td><input type="text" id="especialidad" name="especialidad" value="{{especialidad}}" {{#ifCond
                            @key '!=' ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                    <td><input type="text" id="consultorio" name="consultorio" value="{{consultorio}}" {{#ifCond
                            @key '!=' ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                    <td><input type="email" id="correo" name="correo" value="{{correo}}" {{#ifCond @key '!='
                            ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                    <td>
                        {{#if ../estado}}
                        <a href="/medicos/eliminar/{{cedula}}"><i style='font-size:24px' title="Eliminar" class='fas' 'Eliminar'>&#xf12d;</i></a> <br><br>
                        <a href="/medicos/enviar/{{@key}}"><i style='font-size:24px'  title="Actualizar"  class='fas' 'Actualizar'>&#xf044;</i></a>
                        {{else}}
                        <button class="enviar" type="submit" value="enviar"><i class="far fa-paper-plane" title="Enviar" style='font-size:24px'></i></button>
                        {{/if}}
                    </td>
                </form>
            </tr>
            {{/each}}
        </tbody>
    </table>

<div>
    {{#if estado}}
    <a class="volver" href="/"><i class='fas fa-sign-out-alt' style='font-size:18px'></i>Volver</a>
    <a href="medicos/agregar-medico"><i class='far fa-folder-open' style='font-size:18px'></i>Agregar Medico</a>
    {{else}}
    <a class="volver" href="/medicos"><i class='fas fa-sign-out-alt' style='font-size:18px'></i>Volver</a>
    {{/if}}
</div>