<nav>
    <p><img src="/images/simbolo1.webp">CENTRO MEDICO BACK</p>
    <h3><img src="/images/simbolomedico2.webp">LISTADO DE MEDICOS</h3>
</nav>


    <table border="1">
        <thead>
            <tr>
                <th>cedula</th>
                <th>nombres</th>
                <th>apellidos</th>
                <th>especialidad</th>
                <th>consultorio</th>
                <th>correo</th>
                <th>opciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each medicos}}
            <tr>
                <form action="/medicos/actualizar/{{cedula}}" method="post">
                    <td><input class="filatabla" type="text" value="{{cedula}}" disabled></td>
                    <td><input type="text" id="nombre" name="nombre" value="{{nombre}}" {{#ifCond @key '!='
                            ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                    <td><input type="text" id="apellido" name="apellido" value="{{apellido}}" {{#ifCond @key '!='
                            ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                    <td><input type="text" id="especialidad" name="especialidad" value="{{especialidad}}" {{#ifCond
                            @key '!=' ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                    <td><input type="text" id="consultorio" name="consultorio" value="{{consultorio}}" {{#ifCond
                            @key '!=' ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                    <td><input type="email" id="correo" name="correo" value="{{correo}}" {{#ifCond @key '!='
                            ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                    <td>
                        {{#if ../estado}}
                        <a href="/medicos/eliminar/{{cedula}}">Eliminar</a> <br><br>
                        <a href="/medicos/enviar/{{@key}}">Actualizar</a>
                        {{else}}
                        <input type="submit" class="enviar" value="Enviar">
                        {{/if}}
                    </td>
                </form>
            </tr>
            {{/each}}
        </tbody>
    </table>

<div>
    {{#if estado}}
    <a class="volver" href="/">Volver</a>
    <a href="medicos/agregar-medico">Agregar medico</a>
    {{else}}
    <a class="volver" href="/medicos">Volver</a>
    {{/if}}
</div>