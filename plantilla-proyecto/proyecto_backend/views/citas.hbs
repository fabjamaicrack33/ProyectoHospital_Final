<nav>
    <p><img src="/images/simbolo1.webp">CENTRO MEDICO BACK</p>
    <h3><img src="/images/simbolocitas.jpg">LISTADO DE CITAS MEDICAS</h3>
</nav>

<table border="1">
    <thead>
        <tr>
            <th>Nombre paciente</th>
            <th>Cedula </th>
            <th>Nombre medico</th>
            <th>Consultorio</th>
            <th>Fecha</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each citas}}
        <tr>
            <form action="/citas/actualizar/{{id}}" method="post">
                <td><input type="text" value="{{nombre_paciente}}" disabled></td>
                <td><input type="text" value="{{id_paciente}}" disabled></td>
                <td><input type="text" id="nombre" name="nombre" value="{{nombre}}" disabled>
                    <input type="text" id="apellido" name="apellido" value="{{apellido}}" disabled>
                </td>
                <td><input type="text" id="consultorio" name="consultorio" value="{{consultorio}}" disabled></td>
                <td><input type="date" id="fecha" name="fecha" value="{{formatoFecha fecha}}" {{#ifCond @key '!='
                        ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                <td>
                    {{#if ../estado}}
                    <a href="/citas/eliminar/{{id}}"><i style='font-size:24px' title="Eliminar" class='fas' 'Eliminar'>&#xf12d;</i></a> <br><br>
                    <a href="/citas/enviar/{{@key}}"><i style='font-size:24px'  title="Actualizar"  class='fas' 'Actualizar'>&#xf044;</i></a>
                    {{else}}
                    <button class="enviar" type="submit" value="enviar"><i class="far fa-paper-plane" title="Enviar" style='font-size:24px'></i></button>
                    {{/if}}
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>
<div>
    {{#if estado}}
    <a class="volver" href="/"><i class='fas fa-sign-out-alt' style='font-size:18px'></i>Volver</a>
    <a href="/citas/agregar-cita"><i class='far fa-folder-open' style='font-size:18px'></i>Nueva Cita</a>
    {{else}}
    <a class="volver" href="/citas"><i class='fas fa-sign-out-alt' style='font-size:18px'></i>Volver</a>
    {{/if}}
</div>